@model GestReservation.Models.Trajet

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Trajet Details</h1>

<div class="container">
    <div class="bg-light p-4 rounded shadow-sm">
        <h4 class="mb-3">Trajet Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.VilleDepart)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.VilleDepart)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.VilleArrive)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.VilleArrive)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DateDepart)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DateDepart)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Utilisateur)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Utilisateur.UtilisateurId)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.TrajetId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
</div>
